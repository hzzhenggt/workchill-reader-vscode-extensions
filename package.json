{
  "name": "ttt-eye",
  "displayName": "ttt-eye",
  "description": "一个用来上班摸鱼的vscode阅读插件，支持txt,epub本地小说阅读，可以自动保存阅读进度，支持切换上下页.",
  "version": "0.0.10",
  "publisher": "zzzgggttt",
  "license": "MIT",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [],
  "icon": "logo.png",
  "repository": "https://github.com/tong822218/workchill-reader-vscode-extensions",
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "npm run watch:esbuild",
    "watch:esbuild": "node esbuild.js --watch",
    "vscode:prepublish": "npm run package",
    "package": "node esbuild.js --production",
    "lint": "eslint . --config eslint.config.js",
    "test": "vscode-test"
  },
  "contributes": {
    "commands": [
      {
        "command": "ttt-eye.selectBookFolder",
        "title": "ttt-eye select book folder"
      },
      {
        "command": "ttt-eye.nextLine",
        "title": "ttt-eye next line"
      },
      {
        "command": "ttt-eye.previousLine",
        "title": "ttt-eye previous line"
      },
      {
        "command": "ttt-eye.showSettings",
        "title": "ttt-eye show settings"
      },
      {
        "command": "ttt-eye.startReading",
        "title": "ttt-eye start reading"
      },
      {
        "command": "ttt-eye.stopReading",
        "title": "ttt-eye stop reading"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ttt-eye.showSettings",
          "when": "editorTextFocus",
          "group": "ttt-eye@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ttt-eye.stopReading", 
        "key": "end",
        "mac": "end",
        "when": "editorTextFocus"
      },
      {
        "command": "ttt-eye.nextLine",
        "key": "pagedown",
        "mac": "pagedown",
        "when": "editorTextFocus"
      },
      {
        "command": "ttt-eye.previousLine",
        "key": "pageup",
        "mac": "pageup",
        "when": "editorTextFocus"
      },
      {
        "command": "ttt-eye.startReading",
        "key": "ctrl+0",
        "mac": "cmd+0",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Ttt-eye",
      "properties": {
        "ttt-eye.bookFolder": {
          "type": "string",
          "default": "",
          "description": "书籍文件根目录"
        },
        "ttt-eye.defaultBook": {
          "type": "string",
          "default": "",
          "description": "默认阅读书籍路径"
        },
        "ttt-eye.linesPerPage": {
          "type": "number",
          "default": 1,
          "description": "每次可读几行"
        },
        "ttt-eye.fontSize": {
          "type": "number",
          "default": 14,
          "description": "阅读文字大小(px)"
        },
        "ttt-eye.fontColor": {
          "type": "string",
          "default": "#A8A8A8",
          "description": "阅读文字颜色"
        }
      }
    }
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.16.0",
    "source-map-support": "^0.5.21"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "epub2": "^3.0.2",
    "epubjs": "^0.3.93"
  }
}
